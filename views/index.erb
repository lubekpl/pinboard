<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinboard</title>
    <link rel="stylesheet" href="/flatly.min.css">
    <link rel="stylesheet" href="/custom.css">
  </head>
  <body>
    <div class="container">
      <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div id="postlist">
              <% @all['posts']['post'].each do |post| %>
                <div class="panel">
                  <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left"><a href='<%= post["href"] %>' target='_blank' class="header-link"><%= post["description"] %></a></h3>
                            </div>
                            <div class="col-sm-3">
                                <h4 class="pull-right">
                                <small><em><%= Time.parse(post['time']).strftime('%Y-%m-%d %H:%m') %></em></small>
                                </h4>
                              </div>
                          </div>
                      </div>
                  </div>

                  <div class="panel-body">
                    <%= post['extended'] %>
                  </div>

                  <div class="panel-footer">
                    <% unless post['tag'].split(' ').empty? %>
                      <% post['tag'].split(' ').each do |tag| %>
                        <span class="label label-default"><%= tag %></span>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
  </body>
</html>



